<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EaglesNestSite</title>

    <link rel="stylesheet" href="~/css/masterSite.css" />
</head>
<body>
    <header>
        <nav>
            <ul class="home">
                <li><a asp-area="" asp-controller="Home" asp-action="Index"><img class="logo" src="https://localhost:7152/images/Logos/EaglesNest_Logo.png" alt="Logo" /></a></li>
            </ul>
            <ul>
                <li><a asp-area="" asp-controller="Home" asp-action="Menue">Menu</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="AboutMe">About Us</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                <li><a class="active" style="float: right" asp-area="" asp-controller="Home" asp-action="Login">Login</a></li>
            </ul>
        </nav>
    </header>


    <main role="main">
        @RenderBody()
    </main>



    <footer>
        <div>
            &copy; 2024 - EaglesNestSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

