<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EaglesNestSite</title>

    <link rel="stylesheet" href="~/css/masterSite.css" />
</head>
<body>
    <header>
        <nav>
            <ul class="home">
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Eagles's Nest</a></li>
            </ul>
            <ul>
                <li><a class="active" asp-area="" asp-controller="Home" asp-action="Index">Menu</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                <li><a style="float: right" asp-area="" asp-controller="Home" asp-action="Login">Login</a></li>
            </ul>
        </nav>
    </header>


    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <footer>
        <div>
            &copy; 2024 - EaglesNestSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

